<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarStyle">@style/ActionBar.Solid.GSAMaps</item>
    </style>

    <!-- ActionBar style -->
    <style name="ActionBar.Solid.GSAMaps"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/azul</item>
    </style>

    <!-- Textos -->
    <style name="h1" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#444</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="description" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#666</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="h1_white" parent="@style/h1">
        <item name="android:textColor">#fff</item>
    </style>

    <style name="description_white" parent="@style/description">
        <item name="android:textColor">#fff</item>
    </style>

</resources>