<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/ambassador_textview_nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fulano de Tal"/>

        <TextView
            android:id="@+id/ambassador_textview_instituicao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Faculdade de Tecnologia Evolução"/>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/list_item_icon_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher"
            android:paddingRight="16dp"/>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/ambassador_textview_instituicao_endereco_linha1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Av. Bora Bora, 234"/>

            <TextView
                android:id="@+id/ambassador_textview_instituicao_endereco_linha2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aldeota de La Bomboniera"/>

            <TextView
                android:id="@+id/ambassador_textview_instituicao_cidade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fortaleza - CE"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>